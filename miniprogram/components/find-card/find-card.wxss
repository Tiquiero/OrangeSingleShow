page {
  background-color: #f1f1f1;
}

.find {
  padding: 20rpx;
  background-color: #fff;
}

.find-title {
  display: flex;
  align-items: center;
}

.find-portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.find-box {
  flex: 1;
}

.find-time {
  font-size: 24rpx;
  color: #939393;
}

.find-content {
  margin: 20rpx 0;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}

.find-img {
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto; 
}

.find-img .img {
  width: 230rpx;
  height: 230rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.find-img .img:nth-child(3n) {
  margin-right: 0;
}

.find-nickName {
  font-size: 32rpx;
}
